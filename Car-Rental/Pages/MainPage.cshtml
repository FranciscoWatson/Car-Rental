@page
@model MainPage

<h2>Welcome, @User.Identity.Name!</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Input.City"></label>
        <input asp-for="Input.City" class="form-control" />
        <span asp-validation-for="Input.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Country"></label>
        <input asp-for="Input.Country" class="form-control" />
        <span asp-validation-for="Input.Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Date"></label>
        <input asp-for="Input.Date" class="form-control" />
        <span asp-validation-for="Input.Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.AvailableCars != null)
{
    <h3>Available Cars:</h3>
    <ul>
        @foreach (var car in Model.AvailableCars)
        {
            <li>@car.Model - @car.Make @car.Year - @car.LocationCity - @car.LocationCountry - Available Until: @if (car.NextAvailableDate == DateTime.MinValue)
                                                                                                                      {
                                                                                                                          <p>Indefinitely</p>
                                                                                                                      }
                                                                                                                      else
                                                                                                                      {
                                                                                                                          <p>@car.NextAvailableDate</p>
                                                                                                                      }</li>
        }
    </ul>
}