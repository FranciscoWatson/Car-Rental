
@page
@model Car_Rental.Pages.Register
@section Styles {
    <link rel="stylesheet" href="~/css/register.css">
}

<h2>Sign Up</h2>
<div class="container">
   <form method="post" class="form-signup">
       <div asp-validation-summary="All" class="text-danger"></div>
   
       <div class="form-group">
           <label asp-for="Input.FirstName"></label>
           <input asp-for="Input.FirstName" class="form-control" />
           <span asp-validation-for="Input.FirstName" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.LastName"></label>
           <input asp-for="Input.LastName" class="form-control" />
           <span asp-validation-for="Input.LastName" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.Email"></label>
           <input asp-for="Input.Email" class="form-control" />
           <span asp-validation-for="Input.Email" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.Password"></label>
           <input type="password" asp-for="Input.Password" class="form-control" />
           <span asp-validation-for="Input.Password" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.ConfirmPassword"></label>
           <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
           <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.PhoneNumber"></label>
           <input asp-for="Input.PhoneNumber" class="form-control" />
           <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.DateOfBirth"></label>
           <input type="date" asp-for="Input.DateOfBirth" class="form-control" />
           <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.AddressOne"></label>
           <input asp-for="Input.AddressOne" class="form-control" />
           <span asp-validation-for="Input.AddressOne" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.AddressTwo"></label>
           <input asp-for="Input.AddressTwo" class="form-control" />
           <span asp-validation-for="Input.AddressTwo" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.City"></label>
           <input asp-for="Input.City" class="form-control" />
           <span asp-validation-for="Input.City" class="text-danger"></span>
       </div>
   
       <div class="form-group">
           <select asp-for="Input.Country" class="form-control" asp-items="@Model.Countries">
               <option value="">-- Select Country --</option>
           </select>
       </div>
   
       <div class="form-group">
           <label asp-for="Input.LicenseNumber"></label>
           <input asp-for="Input.LicenseNumber" class="form-control" />
           <span asp-validation-for="Input.LicenseNumber" class="text-danger"></span>
       </div>
   
       <button type="submit" class="btn btn-primary">Register</button>
   </form>
</div>


