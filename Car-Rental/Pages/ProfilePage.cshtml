@page
@model Car_Rental.Pages.ProfilePage

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Edit Profile</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Input.FirstName">First Name</label>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Enter your first name"/>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.LastName">Last Name</label>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Enter your last name"/>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number"/>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Input.AddressOne">Address Line 1</label>
                            <input asp-for="Input.AddressOne" class="form-control" placeholder="Enter your address"/>
                            <span asp-validation-for="Input.AddressOne" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.AddressTwo">Address Line 2 (Optional)</label>
                            <input asp-for="Input.AddressTwo" class="form-control" placeholder="Enter additional address details"/>
                            <span asp-validation-for="Input.AddressTwo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.City">City</label>
                            <input asp-for="Input.City" class="form-control" placeholder="Enter your city"/>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Country">Country</label>
                            <input asp-for="Input.Country" class="form-control" placeholder="Enter your country"/>
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.LicenseNumber">Driver's License Number</label>
                            <input asp-for="Input.LicenseNumber" class="form-control" placeholder="Enter your driver's license number"/>
                            <span asp-validation-for="Input.LicenseNumber" class="text-danger"></span>
                        </div>                        

                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-page="/MainPage" class="btn btn-secondary">Back to Dashboard</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
